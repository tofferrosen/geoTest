<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The minimum number of milliseconds to show the splash screen for. -->
    <integer name="minSplashScreenDelayMs">1400</integer>
    
    <!-- How long before tour start to show the "start tracking" button. -->
    <integer name="startTrackingEarlyMs">1200000</integer>
    
    <!-- Time between requesting locations. -->
    <integer name="locationRequestDelayMs">74900</integer>
    <!-- Time between delivering locations to the server. -->
    <integer name="locationDeliveryDelayMs">75000</integer>
    <!-- Maximum number of locations to send to the server in one request. -->
    <integer name="locationDeliveryBatchSize">50</integer>
    
    <integer name="passiveLocDelayMs">5000</integer>
    <integer name="passiveLocDistanceM">20</integer>
    
    <integer name="maxNumOfGPSRequests">5</integer>
    <integer name="minAccuracyMeters">15</integer>
    <integer name="endRaceNotifAtPercent">50</integer>
    <integer name="tourReminderNotifDelayMs">3600000</integer>
    <integer name="maxWaitSendLocsToDCSMs">300000</integer>
    
    <!-- Battery/Timing Controller Values -->
    <!-- Our target battery usage per hour. -->
    <integer name="maxBatteryUsePerHourPct">8</integer>
    <!-- The maximum multiplier for "locationRequestDelayMs" -->
    <integer name="maxGlobalTimingMultiplier100">1000</integer>
    <!-- The part of the multiplier that can come from the battery usage adjustment. -->
    <integer name="maxBatteryTimingMultiplier100">750</integer>
    <!-- The rate of backoff incase high battery usage is temporary. 0 for full. 1 means no backoff. -->
    <integer name="minBatteryTimingMultiplier100">80</integer>
</resources>