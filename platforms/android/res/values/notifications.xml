<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Title for custom messages from the server. -->
    <string name="push_message_title">TourTrak Alert</string>
    
    <!-- Shown when the race times have changed and user needs to set their start time. -->
    <string name="notification_updated_times_title">Tour Times Changed</string>
    <string name="notification_updated_times_message">Please enter your new start time.</string>
    
    <!-- Shown if the user does not have either the GPS or network location services enabled. -->
    <string name="no_location_notification_title">Unable To Acquire Location</string>
    <string name="no_location_notification_message">TourTrak could not get your location since you do not have GPS enabled. Please enable GPS.</string>

    <!-- Shown a predetermined amount of time before the start of the tour. -->
    <string name="race_reminder_notification_title">Tour Starting Soon</string>
    <string name="race_reminder_notification__gps_message">Please remember to enable your phone\'s GPS. Thanks for participating!</string>
    <string name="race_reminder_notification_message">%1$s minutes until tour!</string>
    
    
    <!-- Shown when the user is being tracked. -->
    <string name="race_tracking_notification_title">TourTrak (Tracking Active)</string>
    <string name="race_tracking_notification_message">The tour is in progress.</string>
    
    <!-- Shown when the race is occuring but the user has not started tracking yet. -->
    <string name="race_ongoing_notification_title">TourTrak (Tracking Disabled)</string>
    <string name="race_ongoing_notification_message">Click here to start tracking.</string>
    
    <!-- Shown when tracking is in progress but there is no data connection. -->
    <string name="no_network_notification_title">No Network Available</string>
    <string name="no_network_notification_message">Please make sure you have mobile data enabled.</string>
    
    <!-- Shown if tracking is stopped because it reached minimum battery level. -->
    <string name="battery_notification_title">Tracking Stopped</string>
    <string name="battery_notification_message">Tracking stopped to conserve battery.</string>
    
    <!-- Shown partway through the tour (configurable in config.xml). -->
    <string name="race_finish_reminder_title">Are you done with the tour?</string>
    <string name="race_finish_reminder_message">Click here and stop tracking when you are done with the tour.</string>
    
    <!-- Shown when tour has been cancelled -->
    <string name="notification_tour_cancelled_title">Tour Cancelled</string>
    <string name="notification_tour_cancelled_message">The tour has been cancelled.</string>
</resources>